{
  "name": "simple-web-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf dist || true",
    "format": "prettier --loglevel=warn --write \"src/**/*.js\"",
    "lint-check": "run-p lint-check:*",
    "lint-check:css": "stylelint \"src/**/*.{less,scss,css}\" --no-fix --allow-empty-input",
    "lint-check:js": "eslint \"src/**/*.js\" --no-fix --max-warnings=0",
    "lint-check:prettier": "prettier --check \"src/**/*.js\"",
    "lint-fix": "run-p lint-fix:*",
    "lint-fix:css": "stylelint \"src/**/*.{less,scss,css}\" --fix --allow-empty-input",
    "lint-fix:js": "eslint \"src/**/*.js\" --fix --max-warnings=0",
    "lint-fix:prettier": "prettier --write src",
    "buildscript": "node .build.mjs",
    "build:css": "BUILD_ONLY=css run-p buildscript",
    "build:javascript": "BUILD_ONLY=javascript run-p buildscript",
    "build:html": "BUILD_ONLY=html run-p buildscript",
    "build": "run-p buildscript",
    "serve": "BUILD_SERVE=true BUILD_WATCH=true npm run build"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.27.9",
    "chokidar": "^3.5.3",
    "cssnano": "^5.0.17",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.27",
    "npm-run-all2": "^5.0.2",
    "stylelint": "^14.5.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^25.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.5.1",
    "zx": "^6.0.7"
  }
}
